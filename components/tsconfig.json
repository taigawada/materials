{
    "extends": "@simple-education-dev/tokens/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "resolveJsonModule": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./types"
    },
    "vueCompilerOptions": {
        "experimentalDisableTemplateSupport": false
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/utils/CancellationToken.js",
        "src/components/SimpleStack/useHolidays.js",
        "src/components/WeeklySelector/useHolidays.js"
    ],
    "exclude": ["node_modules", "src/PlayGround.vue", "src/serve.ts"]
}
